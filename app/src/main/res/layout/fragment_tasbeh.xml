<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tasbeh.TasbehFragment">


    <ImageView
        android:id="@+id/iv_sebha_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/body_sebha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-15dp"
        android:src="@drawable/head_sebha"
        app:layout_constraintBottom_toTopOf="@id/iv_sebha_body"
        app:layout_constraintEnd_toEndOf="@id/iv_sebha_body"
        app:layout_constraintStart_toStartOf="@id/iv_sebha_body" />


    <TextView
        android:id="@+id/tv_number_of_tasbeh"
        style="@style/bodyRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Number of Tasbeh"
        app:layout_constraintEnd_toEndOf="@id/iv_sebha_body"
        app:layout_constraintStart_toStartOf="@id/iv_sebha_body"
        app:layout_constraintTop_toBottomOf="@id/iv_sebha_body" />

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/counter_chape"
        android:text="0"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_number_of_tasbeh" />

    <TextView
        android:id="@+id/tv_doaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/phrases_chape"
        android:gravity="center"
        android:padding="10dp"
        android:text="sobhan allah"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_counter"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
